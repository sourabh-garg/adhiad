<h1>Create a category</h1>


<%= render 'shared/error', obj: @category %>
<%= form_for @category do |f| %>

<div class="form-group">
	<%= f.label :category, "Category Name"%>
	<%= f.text_field :category, class: "form-control", placeholder: "Enter Category", autofocus: true, required: true%>
	<br>
		<%= f.label :subcategory, "Subcategory Name"%>
	<%= f.text_field :subcategory, class: "form-control", placeholder: "Enter Subcategory", required: true%>
</div>
<div class="form-group">
	<%= f.submit class: "btn btn-primary"%>

</div>
<% end %>
  